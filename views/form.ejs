<form method="POST" action="/generate">
  <label>Trust/Client Name:</label>
  <input name="name" required /><br/>
  <label>Date:</label>
  <input name="date" type="date" required /><br/>

  <% for (let i = 0; i < count; i++) { %>
    <fieldset>
      <legend>Vehicle <%= i + 1 %></legend>
      <input name="vehicles[<%= i %>][reg]" placeholder="Reg No" required />
      <input name="vehicles[<%= i %>][seat]" placeholder="Seat Cap" required />
      <input name="vehicles[<%= i %>][ins]" value="package" required />
      <input name="vehicles[<%= i %>][premium]" type="number" required placeholder="Premium" />
      <input name="vehicles[<%= i %>][discount]" type="number" required placeholder="Discount" />
      <input name="vehicles[<%= i %>][payable]" type="number" required placeholder="Payable" />
    </fieldset>
  <% } %>

  <button type="submit">Generate PDF</button>
</form>
